<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="WjActInfoDAO">

    <select id="selectActInfo"
            parameterType="wj.com.cms.wj.act.vo.WjActInfoVO"
            resultType="wj.com.cms.wj.act.vo.WjActInfoVO">
        SELECT
             AI.USER_ID
            ,AI.ACT_CODE
        FROM WJ_ACT_INFO AI
        WHERE 1=1
          AND AU.USER_ID =#{userId}
    </select>
    <select id="selectActInfoTotalCount"
        parameterType="wj.com.cms.wj.act.vo.WjActInfoVO"
        resultType="int">
        SELECT COUNT(*) totcnt
        FROM WJ_ACT_INFO AI
        WHERE 1=1
        AND AI.USER_ID = #{userId}

    </select>
    <select id="selectActInfoList"
        parameterType="wj.com.cms.wj.act.vo.WjActInfoVO"
        resultType="wj.com.cms.wj.act.vo.WjActInfoVO">
        SELECT
             AI.USER_ID
            ,AI.ACT_CODE
        FROM WJ_ACT_INFO AI
        WHERE 1=1
        AND AI.USER_ID = #{userId}
    </select>

    <insert id="insertActInfo">
        <![CDATA[
            INSERT INTO WJ_ACT_INFO(
                 USER_ID
                ,ACT_CODE
            ) VALUES (
                  #{userId}
                 ,#{actCode}
                     )
        ]]>
    </insert>
    <update id="updateActInfo">
        UPDATE WJ_ACT_INFO SET
             USER_ID = #{userId}
            ,ACT_CODE = #{actCode}
        WHERE 1=1
        AND USER_ID = #{userId}
    </update>

    <delete id="deleteUserId">
        DELETE FROM WJ_ACT_INFO WHERE USER_ID = #{userId}
    </delete>
</mapper>